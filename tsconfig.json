{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "include": [
    "*.js",
    "src/**/*.js",
    "__tests__/**/*.js"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "dist-packager",
    ".cache"
  ]
}
